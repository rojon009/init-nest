# App
NODE_ENV=development
PORT=3000

# Database (required by DatabaseModule)
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=
DB_NAME=init_nest

# Logging
LOG_LEVEL=info

# OpenTelemetry
OTEL_SERVICE_NAME=nest-init
# OTLP collector endpoint (traces, logs, metrics). Default: http://localhost:4318
# OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4318
# Enable OTel SDK internal diagnostics (optional)
# OTEL_DIAG=1
# Use batch log processor in production; set to 0 to force simple processor (e.g. for debugging)
# OTEL_LOG_BATCH=1
